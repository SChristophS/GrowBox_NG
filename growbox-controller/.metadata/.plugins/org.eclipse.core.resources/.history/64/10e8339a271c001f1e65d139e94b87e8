#ifndef MQTT_CLIENT_H
#define MQTT_CLIENT_H

#include "MQTTClient.h"

#define TCP_SOCKET 0

// Definition der Struktur für MQTT-Optionen
typedef struct {
    char* clientid;
    int nodelimiter;
    char* delimiter;
    enum QoS qos;
    char* username;
    char* password;
    char* host;
    int port;
    int showtopics;
} mqtt_opts_t;

// Funktionsprototypen
void messageArrived(MessageData* md);
int mqtt_client_init(Network* n, MQTTClient* c, mqtt_opts_t* opts, unsigned char* targetIP, unsigned int targetPort);
void mqtt_client_yield(MQTTClient* c, int interval);

// MQTT-Rückgabewerte definieren
#define MQTT_SUCCESS 0
#define MQTT_UNNACCEPTABLE_PROTOCOL_VERSION 1
#define MQTT_IDENTIFIER_REJECTED 2
#define MQTT_SERVER_UNAVAILABLE 3
#define MQTT_BAD_USER_NAME_OR_PASSWORD 4
#define MQTT_NOT_AUTHORIZED 5

#endif // MQTT_CLIENT_H
